#imageViewerViewports
  height: calc(100% - 30px)
  width: 100%
    
  .viewportContainer
    float: left
    border: 2px solid #777
    
    &.active
      border: 2px solid #777
      
    &:hover
      border: 2px solid white
    
    .removable
      width: 100%
      height: 100%
      position: relative // Necessary so that the viewportOverlay is on top of the viewports