@import "{design}/app.styl"

.btn-group
  background-color: $primaryBackgroundColor
  display: inline-block
  
  button
    text-align: center
    color: $defaultColor
    background-color: $primaryBackgroundColor
    border-color: $uiBorderColor
    transition(all 0.1s ease)
    
    // Prevent the blue outline in Chrome when a viewport is selected
    outline: 0 !important
    
    &:hover
      color: $hoverColor

    &.active, &:active
      color: $activeColor