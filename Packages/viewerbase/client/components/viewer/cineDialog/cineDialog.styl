#cineDialog
  display: none
  z-index: 1000
  position: absolute
  top: auto
  left: auto
  bottom: 3px
  right: 3px

  overflow: hidden  
  padding: 10px
  
  width: 250px
  height: 175px

  border: 1px black solid
  border-radius: 3px
  background: white
  color: black
  
  box-sizing: border-box
  
  -webkit-user-select: none
  -moz-user-select: none
  -o-user-select: none
  -ms-user-select: none
  -khtml-user-select: none
  user-select: none

  #cineButtons
    padding-bottom: 10px
    overflow: auto

    .cineButton
      cursor: pointer
      margin: 0 6px
      text-decoration: none

  #cineOptions
    padding: 5px 0
    overflow: auto

    #loopSection
      padding-right: 12px