@import "{design}/app"

#viewer
  align-items: stretch
  background-color: black
  display: flex
  flex-flow: column wrap
  height: 100%
  width: 100%
  margin: 0
  padding: 0


#imageViewerViewports
  .viewportContainer
    border: none !important
    outline: 0 !important // Prevent blue outline in Chrome

    &:hover
    &.active
    &:hover.active
      border: none !important
      outline: 0 !important // Prevent blue outline in Chrome

    &:not(:last-child)
    .removable
      .imageViewerViewport
        border-right: $uiBorderThickness solid #436270
